# ===========================================
# EBEEF Server Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Application Mode
# Values: demo | production
# demo: Auth disabled, uses demo data
# production: Full auth enabled, requires real credentials
APP_MODE=demo

# Server Configuration
PORT=3001
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/ebeef

# JWT Authentication (required for production)
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# WhatsApp Business API (optional - mocked in demo)
WHATSAPP_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-whatsapp-app-secret

# OpenAI API (optional - AI features disabled without)
OPENAI_API_KEY=sk-your-openai-api-key

# Error Tracking (optional)
SENTRY_DSN=https://your-key@sentry.io/project-id

# CORS (comma-separated origins for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
