# ===========================================
# EBEEF Server - Production Environment
# ===========================================
# Copy to .env.production for production deployment

# ----- Application Mode -----
NODE_ENV=production
APP_MODE=production
PORT=3001

# ----- Database -----
# Use a managed PostgreSQL service in production
DATABASE_URL=postgresql://ebeef_user:SECURE_PASSWORD@your-db-host:5432/ebeef_prod?sslmode=require

# Connection pool settings for production
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=5000

# ----- Authentication -----
# Generate with: openssl rand -base64 32
JWT_SECRET=GENERATE_A_SECURE_32_CHAR_SECRET_HERE

# ----- WhatsApp Business API -----
# From Meta for Developers dashboard (https://developers.facebook.com)
WHATSAPP_TOKEN=EAAxxxxxxxxxxxxxxx
PHONE_NUMBER_ID=123456789012345
VERIFY_TOKEN=your-unique-webhook-verify-token
WHATSAPP_APP_SECRET=app_secret_from_meta_dashboard

# ----- OpenAI API -----
# For AI-powered customer service features
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# ----- CORS -----
# Your production domains
CORS_ORIGINS=https://app.ebeef.com.br,https://admin.ebeef.com.br

# ----- Rate Limiting -----
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ----- Logging -----
LOG_LEVEL=info
